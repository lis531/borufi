---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Player from '../Player.astro';
import Playlist from '../Playlist.astro';
// import { ViewTransitions } from "astro:transitions";
---

<Layout title="Borufi">
	<Playlist />
	<head>
		<main id="main">
			<h1><span class="text-gradient">Borufi</span></h1>
			<ul role="list" class="link-card-grid">
				<Card
				img="boruwa_originals.jpg"
				source=''
				title="Boruwa Originals"
				author="boruwa"
				playlistId="0"
				/>
				<Card
				img="modern_boruwas.jpg"
				source='kebsonken.mp3'
				title="Modern Boruwas"
				author="boruwa"
				playlistId="1"
				/>
				<Card
				img="boruwa_vocals.jpg"
				source='vocal_ns.wav'
				title="Boruwa Vocals"
				author="boruwa"
				playlistId="2"
				/>
				<Card
				img="christmas_with_boruwa.jpg"
				source='lyr.mp3'
				title="Boruwa For Christmas"
				author="boruwa"
				playlistId="3"
				/>
			</ul>
		</main>
		<!-- <ViewTransitions /> -->
	</head>
	<Player />
</Layout>
<style>
	body{
		margin: 0;
	}
	main {
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding: 1rem;
		font-size: 20px;
		margin-bottom: 15vh;
	}
	/* main > *{
		display: none;
	} */
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: linear-gradient(
			to bottom right,
			rgba(131, 29, 29, 1),
			rgba(99, 175, 226, 1)
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(18ch, 1fr));
		justify-items: center;
		gap: 2ch;
		padding: 0;
	}
</style>
