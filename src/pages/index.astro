---
import Layout from '../layouts/Layout.astro';
import Cards from '../components/Card.astro';
import Player from '../player/Player.astro';
import Playlist from '../playlist/Playlist.astro';
// import { ViewTransitions } from "astro:transitions";
---

<Layout title="Borufi">
	<Playlist />
	<head>
		<main id="main">
			<h1><span class="text-gradient">Borufi</span></h1>
			<ul role="list" class="link-card-grid" id="playlistsList" aria-owns=".song">
				<Cards />
			</ul>
		</main>
		<!-- <ViewTransitions /> -->
	</head>
	<Player />
</Layout>
<style>
	body {
		margin: 0;
	}
	main {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding: 1rem;
		font-size: 20px;
		margin-bottom: 14rem;
	}
	h1 {
		font-size: 5rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: linear-gradient(
			to bottom right,
			rgba(131, 29, 29, 1),
			rgba(99, 175, 226, 1)
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-position: 0%;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(22ch, 1fr));
		grid-auto-rows: auto;
		justify-items: center;
		max-width: -webkit-fill-available;
		gap: 3vw;
		padding: 0;
	}

	@media screen and (max-width: 600px) {
		.link-card-grid {
			gap: 1rem;
		}
	}
</style>
