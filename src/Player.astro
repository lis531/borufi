<audio controls>
    <source src="" type="audio/mp3" id="sorc">
</audio>

<script>
    let songBtns = document.querySelectorAll("#song");
    let source = document.getElementById("sorc") as HTMLAudioElement;
    let audio = document.getElementsByTagName("audio")[0];
    const changeSong = (sourceLink:any) => {
        if (source != null) {
            source.src = sourceLink;
            audio.load();
        }
    };

    songBtns.forEach((button) => {
        if (button instanceof HTMLElement) {
            button.addEventListener("click", () => changeSong(button.dataset.source));
        }
    });
</script>

<style>
    audio {
        width: 100%;
        position: fixed;
        bottom: 1rem;
        border-radius: 1rem;
        background: #fff;
    }
</style>
