        justify-content: center;
        gap: 1rem;
        width: 100%;
    }
    #volumeControl{
        width: calc(20% - 2vw);
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: right;
        margin-right: 2vw;
    }
    #songInfo{
        width: calc(20% - 2vw);
        margin-left: 2vw;
    }
    #songInfo a:hover{
        text-decoration: underline;
        cursor: pointer;
    }
    #duration, #current-time{
        width: 3vw;
